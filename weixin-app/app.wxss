/* app.wxss */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  background-color: #f5f5f5;
  color: #333;
}

.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
}

.error {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  color: #ff4444;
  text-align: center;
  padding: 0 40rpx;
}

.chart-container {
  width: 100%;
  height: 600rpx;
  margin: 20rpx 0;
}

.info-section {
  padding: 20rpx 40rpx;
  background-color: white;
  margin: 20rpx 0;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.info-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #1f77b4;
}

.info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
  font-size: 28rpx;
}

.info-label {
  color: #666;
}

.info-value {
  font-weight: bold;
}