page { height: 100vh; background: #f8f9fa; overflow: hidden; }

/* 容器采用全屏固定 */
.container { 
  position: relative;
  width: 100vw;
  height: 100vh;
}

/* 1. 顶部提示：绝对定位 */
.hint-bar {
  position: fixed;
  top: 0; left: 0; right: 0;
  display: flex; justify-content: center;
  z-index: 100;
  transform: translateY(-120rpx);
  opacity: 0;
  transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);
}
.hint-bar.active { transform: translateY(110rpx); opacity: 1; }

.hint-content {
  background: rgba(255, 255, 255, 0.95);
  padding: 16rpx 36rpx;
  border-radius: 50rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.1);
  display: flex; align-items: center;
  border: 1rpx solid #eef2f5;
}
.hint-content text { font-size: 24rpx; color: #2196F3; margin-left: 12rpx; font-weight: bold; }

/* 2. 图表区域：强行限制高度为屏幕 75% */
.chart-area { 
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 75vh; /* 确保下方留出 25% 的空间 */
  z-index: 1;
}

/* 3. 免责声明区域：锁定在底部 25% 区域 */
.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 25vh; /* 固定高度 */
  display: flex;
  align-items: center;
  justify-content: center;
  padding-bottom: env(safe-area-inset-bottom); /* 兼容刘海屏 */
  background: #f8f9fa;
  z-index: 5;
}

.disclaimer-box {
  width: 90%;
  background: #ffffff;
  padding: 24rpx;
  border-radius: 20rpx;
  border: 1rpx solid #ebeef5;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
}

.disclaimer-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.tag {
  font-size: 20rpx;
  background: #fff2e8;
  color: #fa541c;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
  border: 1rpx solid #ffbb96;
  margin-right: 15rpx;
  font-weight: bold;
}

.title { font-size: 22rpx; color: #666; font-weight: bold; }

.content {
  font-size: 20rpx;
  color: #999;
  line-height: 1.6;
  text-align: justify;
  display: block;
}

/* 其他辅助 */
.blur { filter: blur(12px) brightness(0.9); }

.loading-box {
  position: absolute; top: 40%; left: 50%; transform: translate(-50%, -50%);
  display: flex; flex-direction: column; align-items: center; z-index: 1000;
}
.spinner {
  width: 60rpx; height: 60rpx; border: 4rpx solid #ddd; border-top-color: #2196F3;
  border-radius: 50%; animation: rotate 0.8s linear infinite; margin-bottom: 20rpx;
}
@keyframes rotate { to { transform: rotate(360deg); } }

/* 弹窗样式 */
.modal-mask { position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.5); z-index: 998; backdrop-filter: blur(2px); }
.details-modal { position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 86%; background: #fff; border-radius: 40rpx; z-index: 999; box-shadow: 0 40rpx 90rpx rgba(0,0,0,0.3); }
.modal-header { padding: 40rpx 40rpx 10rpx; display: flex; justify-content: space-between; align-items: center; }
.header-left { display: flex; align-items: center; font-weight: bold; font-size: 32rpx; }
.blue-bar { width: 10rpx; height: 35rpx; background: #2196F3; margin-right: 20rpx; border-radius: 5rpx; }
.close-x { font-size: 60rpx; color: #ddd; line-height: 1; }
.modal-body { padding: 30rpx 40rpx; }
.time-box { background: #f0f7ff; color: #2196F3; padding: 18rpx 25rpx; border-radius: 15rpx; font-size: 26rpx; margin-bottom: 30rpx; }
.data-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 20rpx; }
.grid-item { padding: 25rpx 20rpx; background: #fafafa; border: 1rpx solid #f0f0f0; border-left: 10rpx solid #ddd; border-radius: 20rpx; }
.label { font-size: 24rpx; color: #999; margin-bottom: 10rpx; display: block; }
.val { font-size: 38rpx; font-weight: bold; color: #333; }
.unit { font-size: 20rpx; color: #aaa; margin-left: 5rpx; }
.modal-footer { padding: 20rpx 40rpx 40rpx; }
.btn-confirm { background: linear-gradient(135deg, #2196F3, #1976D2); color: #fff; border-radius: 60rpx; font-size: 30rpx; font-weight: bold; }
