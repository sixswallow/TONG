/* index.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.loading-container, .error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.error-container {
  color: #d62728;
}

.error-text {
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.content {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.info-section {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

.info-card {
  width: 200rpx;
  height: 120rpx;
  background-color: #f0f8ff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.info-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.info-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #1f77b4;
}

.chart-container {
  width: 100%;
  height: 600rpx;
  margin-bottom: 20rpx;
}